<resources>

    <style name="PhoneEmailStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/dark_orange</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NameStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:shadowColor">@color/dark_orange</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecyclerViewOverlayTheme" parent="Theme.Training_project_for_65apps">
        <item name="android:colorEdgeEffect">@color/dark_blue</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/blue</item>
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/light_blue</item>
        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/blue</item>
    </style>
</resources>